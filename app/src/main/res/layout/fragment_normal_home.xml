<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splash"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_home_scene_detect"
            android:layout_width="149dp"
            android:layout_height="139dp"
            android:background="@drawable/bg_normal_home_logo_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_app" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/tv_image_scene_detect"
                android:textColor="#212121"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/normal_decrate" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_object_detect"
            android:layout_width="149dp"
            android:layout_height="139dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_normal_home_logo_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_tab_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/tv_image_object_detect"
                android:textColor="#212121"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/normal_decrate" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_home_label_detect"
            android:layout_width="149dp"
            android:layout_height="139dp"
            android:background="@drawable/bg_normal_home_logo_selector">

            <ImageView
                android:id="@+id/iv_label_detect"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_tab_icon" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_label_detect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="@string/tv_image_label_detect"
                android:textColor="#212121"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:layout_below="@id/tv_msg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:src="@drawable/normal_decrate" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_home_mnist_detect"
            android:layout_width="149dp"
            android:layout_height="139dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_normal_home_logo_selector"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_app" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/tv_image_mnist_detect"
                android:textColor="#212121"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/normal_decrate" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
